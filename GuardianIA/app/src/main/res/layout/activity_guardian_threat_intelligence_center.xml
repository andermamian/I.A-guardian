<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/threat_intelligence_gradient"
    tools:context=".activities.GuardianThreatIntelligenceCenterActivity">

    <!-- Header del centro de inteligencia -->
    <LinearLayout
        android:id="@+id/threat_intel_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/threat_intel_header_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Threat Intelligence"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/guardian_font_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Center"
                android:textColor="#FF4444"
                android:textSize="18sp"
                android:fontFamily="@font/guardian_font_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_threat_alerts"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_threat_alerts"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:id="@+id/btn_intel_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_intel_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Panel de estado global de amenazas -->
    <LinearLayout
        android:id="@+id/global_threat_status"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/threat_intel_header"
        android:background="@drawable/global_threat_status_bg"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Nivel de amenaza global -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.guardianai.custom.ThreatLevelIndicator
                android:id="@+id/global_threat_level"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/tv_threat_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ELEVADO"
                android:textColor="#FF6B35"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Estadísticas de amenazas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_threat_active"
                    android:tint="#FF4444" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenazas Activas:"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_active_threats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="247"
                    android:textColor="#FF4444"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_threat_blocked"
                    android:tint="#00FF88" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bloqueadas (24h):"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_blocked_threats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,847"
                    android:textColor="#00FF88"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_threat_intelligence"
                    android:tint="#FFD700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intel Updates:"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_intel_updates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="156"
                    android:textColor="#FFD700"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Tabs de inteligencia -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/intel_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/global_threat_status"
        android:background="@drawable/intel_tabs_bg"
        app:tabTextColor="#B0B0B0"
        app:tabSelectedTextColor="#FF4444"
        app:tabIndicatorColor="#FF4444"
        app:tabMode="scrollable">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amenazas" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IOCs" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TTPs" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feeds" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Análisis" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Área principal de contenido -->
    <FrameLayout
        android:id="@+id/intel_content_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/intel_tabs"
        android:layout_above="@id/threat_action_panel">

        <!-- ViewPager para contenido de tabs -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/intel_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Overlay de mapa de amenazas -->
        <FrameLayout
            android:id="@+id/threat_map_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.guardianai.custom.ThreatMapView
                android:id="@+id/threat_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Controles del mapa -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/map_controls_bg"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/btn_map_layers"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_map_layers"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/btn_map_filter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_map_filter"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/btn_map_refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_map_refresh"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Panel de alertas emergentes -->
        <LinearLayout
            android:id="@+id/emergency_alerts_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/emergency_alerts_bg"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_emergency_alert"
                    android:tint="#FF0000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ALERTA CRÍTICA: Nueva campaña APT detectada"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />

                <ImageView
                    android:id="@+id/btn_close_alert"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grupo APT29 utilizando nuevas técnicas de evasión. Actualizar defensas inmediatamente."
                android:textColor="#E0E0E0"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="36dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Panel de acciones de inteligencia -->
    <LinearLayout
        android:id="@+id/threat_action_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/threat_action_panel_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp">

        <!-- Botón de escaneo de amenazas -->
        <LinearLayout
            android:id="@+id/btn_threat_scan"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/threat_action_button_bg"
            android:layout_marginEnd="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_threat_scan"
                android:tint="#FF4444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escanear"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de análisis -->
        <LinearLayout
            android:id="@+id/btn_threat_analysis"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/threat_action_button_bg"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_threat_analysis"
                android:tint="#FFD700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analizar"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de feeds -->
        <LinearLayout
            android:id="@+id/btn_intel_feeds"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/threat_action_button_bg"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_intel_feeds"
                android:tint="#00FFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeds"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de mapa -->
        <LinearLayout
            android:id="@+id/btn_threat_map"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/threat_action_button_bg"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_threat_map"
                android:tint="#00FF88" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de respuesta -->
        <LinearLayout
            android:id="@+id/btn_threat_response"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/threat_action_button_bg"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_threat_response"
                android:tint="#FF6B35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responder"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Indicador de actividad de inteligencia -->
    <LinearLayout
        android:id="@+id/intel_activity_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/global_threat_status"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/intel_activity_bg"
        android:padding="8dp">

        <com.guardianai.custom.IntelActivityIndicator
            android:id="@+id/intel_activity_view"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/tv_intel_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textColor="#FF4444"
            android:textSize="9sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Botón flotante de acciones rápidas -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_quick_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/threat_action_panel"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_threat_shield"
        app:backgroundTint="#FF4444"
        app:tint="#FFFFFF"
        app:elevation="8dp" />

</RelativeLayout>

