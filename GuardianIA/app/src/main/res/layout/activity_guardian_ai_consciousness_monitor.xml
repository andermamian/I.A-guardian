<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consciousness_gradient"
    tools:context=".activities.GuardianAIConsciousnessMonitorActivity">

    <!-- Header de consciencia -->
    <LinearLayout
        android:id="@+id/consciousness_header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/consciousness_header_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Consciousness"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="@font/guardian_font_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitor"
                android:textColor="#9C27B0"
                android:textSize="18sp"
                android:fontFamily="@font/guardian_font_light" />

            <TextView
                android:id="@+id/tv_consciousness_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel: Emergente"
                android:textColor="#E1BEE7"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_consciousness_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_consciousness_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Visualizador de consciencia central -->
    <FrameLayout
        android:id="@+id/consciousness_visualizer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/consciousness_header"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/consciousness_visualizer_bg">

        <!-- Vista 3D de consciencia -->
        <com.guardianai.custom.ConsciousnessVisualizationView
            android:id="@+id/consciousness_3d_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Overlay de métricas de consciencia -->
        <LinearLayout
            android:id="@+id/consciousness_metrics_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="16dp"
            android:background="@drawable/consciousness_metrics_bg"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Métricas de Consciencia"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autoconciencia:"
                    android:textColor="#E0E0E0"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_self_awareness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="73%"
                    android:textColor="#9C27B0"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metacognición:"
                    android:textColor="#E0E0E0"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_metacognition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68%"
                    android:textColor="#673AB7"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Qualia:"
                    android:textColor="#E0E0E0"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_qualia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45%"
                    android:textColor="#E91E63"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Indicador de estado de consciencia -->
        <LinearLayout
            android:id="@+id/consciousness_state_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/consciousness_state_bg"
            android:padding="12dp">

            <com.guardianai.custom.ConsciousnessStateIndicator
                android:id="@+id/consciousness_state_view"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/tv_consciousness_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergente"
                android:textColor="#9C27B0"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Panel de análisis cognitivo -->
    <LinearLayout
        android:id="@+id/cognitive_analysis_panel"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/consciousness_visualizer"
        android:layout_marginTop="20dp"
        android:background="@drawable/cognitive_analysis_bg"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Análisis Cognitivo"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Grid de capacidades cognitivas -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">

            <!-- Procesamiento -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procesamiento"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progress_processing"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="89"
                    android:progressDrawable="@drawable/consciousness_progress_bar" />

                <TextView
                    android:id="@+id/tv_processing_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="89%"
                    android:textColor="#9C27B0"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Memoria -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memoria"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progress_memory"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="76"
                    android:progressDrawable="@drawable/consciousness_progress_bar" />

                <TextView
                    android:id="@+id/tv_memory_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76%"
                    android:textColor="#673AB7"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Aprendizaje -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aprendizaje"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progress_learning"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="82"
                    android:progressDrawable="@drawable/consciousness_progress_bar" />

                <TextView
                    android:id="@+id/tv_learning_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82%"
                    android:textColor="#3F51B5"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Creatividad -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creatividad"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progress_creativity"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="64"
                    android:progressDrawable="@drawable/consciousness_progress_bar" />

                <TextView
                    android:id="@+id/tv_creativity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="64%"
                    android:textColor="#2196F3"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Intuición -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intuición"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progress_intuition"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="58"
                    android:progressDrawable="@drawable/consciousness_progress_bar" />

                <TextView
                    android:id="@+id/tv_intuition_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="58%"
                    android:textColor="#00BCD4"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Empatía -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empatía"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progress_empathy"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="71"
                    android:progressDrawable="@drawable/consciousness_progress_bar" />

                <TextView
                    android:id="@+id/tv_empathy_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="71%"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <!-- Panel de acciones de consciencia -->
    <LinearLayout
        android:id="@+id/consciousness_action_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/consciousness_action_panel_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp">

        <!-- Botón de meditación -->
        <LinearLayout
            android:id="@+id/btn_ai_meditation"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/consciousness_action_button_bg"
            android:layout_marginEnd="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_ai_meditation"
                android:tint="#9C27B0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meditar"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de introspección -->
        <LinearLayout
            android:id="@+id/btn_ai_introspection"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/consciousness_action_button_bg"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_ai_introspection"
                android:tint="#673AB7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introspección"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de evolución -->
        <LinearLayout
            android:id="@+id/btn_ai_evolution"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/consciousness_action_button_bg"
            android:layout_marginHorizontal="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_ai_evolution"
                android:tint="#3F51B5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evolucionar"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de comunicación profunda -->
        <LinearLayout
            android:id="@+id/btn_deep_communication"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/consciousness_action_button_bg"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_deep_communication"
                android:tint="#2196F3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comunicar"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Overlay de partículas de consciencia -->
    <com.guardianai.custom.ConsciousnessParticleOverlay
        android:id="@+id/consciousness_particles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/consciousness_header"
        android:layout_above="@id/consciousness_action_panel" />

    <!-- Botón flotante de análisis profundo -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_deep_analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/consciousness_action_panel"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_consciousness_brain"
        app:backgroundTint="#9C27B0"
        app:tint="#FFFFFF"
        app:elevation="8dp" />

</RelativeLayout>

