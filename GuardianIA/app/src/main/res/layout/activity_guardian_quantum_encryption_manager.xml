<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quantum_encryption_gradient"
    tools:context=".activities.GuardianQuantumEncryptionManagerActivity">

    <!-- Header cuántico -->
    <LinearLayout
        android:id="@+id/quantum_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/quantum_header_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back_white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantum Encryption"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/guardian_font_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manager"
                android:textColor="#00FFFF"
                android:textSize="16sp"
                android:fontFamily="@font/guardian_font_light" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_quantum_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_quantum_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Estado del sistema cuántico -->
    <LinearLayout
        android:id="@+id/quantum_status_panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/quantum_header"
        android:background="@drawable/quantum_status_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <!-- Indicador de estado cuántico -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <com.guardianai.custom.QuantumStateIndicator
                android:id="@+id/quantum_state_indicator"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/tv_quantum_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entangled"
                android:textColor="#00FFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Métricas cuánticas -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coherencia:"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/progress_coherence"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="87"
                    android:progressDrawable="@drawable/quantum_progress_bar" />

                <TextView
                    android:id="@+id/tv_coherence_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87%"
                    android:textColor="#00FFFF"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrelazamiento:"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/progress_entanglement"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:progress="94"
                    android:progressDrawable="@drawable/quantum_progress_bar" />

                <TextView
                    android:id="@+id/tv_entanglement_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="94%"
                    android:textColor="#FF00FF"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Tabs de funcionalidades cuánticas -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/quantum_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/quantum_status_panel"
        android:background="@drawable/quantum_tabs_bg"
        app:tabTextColor="#B0B0B0"
        app:tabSelectedTextColor="#00FFFF"
        app:tabIndicatorColor="#00FFFF"
        app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encriptar" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claves" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Túneles" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor" />

    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager para contenido de tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/quantum_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/quantum_tabs"
        android:layout_above="@id/quantum_action_panel" />

    <!-- Panel de acciones cuánticas -->
    <LinearLayout
        android:id="@+id/quantum_action_panel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/quantum_action_panel_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- Botón de encriptación cuántica -->
        <LinearLayout
            android:id="@+id/btn_quantum_encrypt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quantum_button_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_quantum_encrypt"
                android:tint="#00FFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encriptar"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de desencriptación -->
        <LinearLayout
            android:id="@+id/btn_quantum_decrypt"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quantum_button_bg"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_quantum_decrypt"
                android:tint="#FF00FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desencriptar"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de generación de claves -->
        <LinearLayout
            android:id="@+id/btn_generate_keys"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quantum_button_bg"
            android:layout_marginHorizontal="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_quantum_key_gen"
                android:tint="#FFD700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gen. Claves"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botón de túnel cuántico -->
        <LinearLayout
            android:id="@+id/btn_quantum_tunnel"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quantum_button_bg"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_quantum_tunnel"
                android:tint="#00FF88" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Túnel"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Overlay de partículas cuánticas -->
    <com.guardianai.custom.QuantumParticleOverlay
        android:id="@+id/quantum_particles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/quantum_header"
        android:layout_above="@id/quantum_action_panel" />

    <!-- Indicador de actividad cuántica -->
    <LinearLayout
        android:id="@+id/quantum_activity_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/quantum_header"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/quantum_indicator_bg"
        android:padding="12dp">

        <com.guardianai.custom.QuantumActivityIndicator
            android:id="@+id/quantum_activity_view"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_quantum_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textColor="#00FFFF"
            android:textSize="10sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>

