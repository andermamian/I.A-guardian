<!-- radar_circles.xml - Círculos concéntricos del radar -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Círculo exterior -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#00E676"
                android:dashWidth="2dp"
                android:dashGap="1dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <!-- Círculo medio -->
    <item android:inset="15dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#00E676"
                android:dashWidth="3dp"
                android:dashGap="2dp"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
    <!-- Círculo interior -->
    <item android:inset="25dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#00E676"/>
            <solid android:color="#00000000"/>
        </shape>
    </item>
</layer-list>